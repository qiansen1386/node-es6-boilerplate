{
  "name": "node-es6-boilerplate",
  "version": "0.0.2",
  "description": "A es6 express boilerplate",
  "main": "build/index.js",
  "scripts": {
    "dev": "nodemon node_modules/babel-cli/bin/babel-node.js --debug -- app/index.js --debug",
    "test": "mocha ./tests/",
    "build": "babel -w app/ -d build/ -s"
  },
  "keywords": [
    "es6",
    "express",
    "boilerplate"
  ],
  "author": "Paris Qian Sen",
  "private": false,
  "license": "WTFPL",
  "dependencies": {
    "bluebird": "^3.4.6",
    "dotenv": "^2.0.0",
    "koa": "^2.0.0",
    "koa-route": "^2.4.2",
    "lodash": "^4.17.0",
    "moment": "^2.16.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "chai": "^3.5.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "mocha": "^3.1.2",
    "node-mocks-http": "^1.5.4",
    "nodemon": "^1.11.0"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
